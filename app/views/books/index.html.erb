<div class="container">
    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name %>">
        <%= msg %>
      </div>
    <% end %>
  <div class="row">
    <div class="col-3">
      <%= render '../views/sidebar', user: current_user, new_book: @new_book %>
    </div>
    <div class="col-9">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.user.id %></td>
            <td><%= link_to "#{book.title}", book_path(book.id)%></td>
            <td><%= book.opinion %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @books %>
    </div>
  </div>
</div>