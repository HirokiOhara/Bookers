<div class="container">
  <div class="row">
    <div class="col-4 offset-4">
      <h2>User info</h2>

      <% @edit_user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>

      <%= form_with(model: @edit_user, local: true) do |f| %>
        <% if @edit_user.errors.any? %>
          <div id="error_explanation">
          <h2><%= pluralize(@edit_user.errors.count, "error") %> prohibited this post from being saved:</h2>
            <ul>
              <% @edit_user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "col-12"%>
        </div>

        <div class="field">
          <%= f.label :profile_image %><br>
          <%= f.attachment_field :profile_image, class: "col-12"%>
        </div>

        <div class="field">
          <%= f.label :intro %><br>
          <%= f.text_area :intro, class: "col-12"%>
        </div>
        <br>
        <div class="actions">
          <%= f.submit 'Update User', class: "btn btn-primary col-12"%>
        </div>

      <% end %>
    </div>
  </div>
</div>