<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render '../views/sidebar', user: current_user, new_book: @new_book %>
    </div>
    <div class="col-9">
      <h2>Users</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.profile_image.nil? %>
                <%= image_tag scr = "no_image.jpg", :size=>"50x50" %>
              <% else %>
                <%= image_tag attachment_url(user, :profile_image, :fill, 50, 50, format: "jpg") %>
              <% end %>
            </td>
            <th><%= user.name %></td>
            <td><%= link_to "show", user_path(user.id)%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>